{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "types": ["vitest/globals", "./lib/global.d.ts"],
